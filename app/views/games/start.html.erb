<% content_for :title, "Start Game!" %>

<% if !@game.nil? %>
	<% @game.errors.full_messages.each do |msg| %>
  		<p><%= msg %></p>
  	<% end %>
<% end %>

<% @game.players.where(:role => 'player').each do |user| %>
	<p><%= user.full_name %>, Target: <%= user.target.full_name %>, Assassin: <%= user.assassin.full_name %></p>
<% end %>
<br>