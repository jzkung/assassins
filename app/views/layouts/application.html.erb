<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
    "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
	<head>
  <title><%= yield(:title) %></title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <!--[if lt IE 9]>
  <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
</head>
<body>
	<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
		<div class="navbar-inner">
			<div class="container"><nav>
				<ul class="nav pull-left">
					<% if !session[:current_user_id].nil? %>
						<% @current_user = User.find(session[:current_user_id]) %>
						<li><%= link_to "Hi, #{@current_user.full_name}!", controller: :users, action: :index %></li>  
						<li><%= link_to "(Logout)", controller: :users, action: :logout %></li>
						<% if @current_user.is_admin? %>
							<% if Game.count == 0 %>
								<li><%= link_to "New Game", controller: :games, action: :new %></li>
							<% else %>
								<li><%= link_to "Manage Game", controller: :games, action: :manage %></li>
								<li><%= link_to "Leaderboard", controller: :games, action: :leaderboard %></li>
							<% end %>
							<li><%= link_to "Manage Users", controller :users, action: :manage %></li>
						<% elsif @current_user.game_id.blank? %>:
							<li><%= link_to "Join Game", controller: :games, action: :join %></li>
						<% else %>
							<li><%= link_to "Report Kill", controller: :kills, action: :report %></li>
							<li><%= link_to "Kill History", controller: :kills, action: :history %></li>
						<% end %>
					<% else %>
						<li><%= link_to "Login!", controller: :users, action: :login %></li>
					<% end %>
				</ul>
			</nav></div>
		</div>
	</div>
	<br>
	<br>
	<br>
	<div class="container" role="main">
		<div class="right hero-unit">
			<h2><%= yield(:title) %></h2>
			<%= yield %>
		</div>
	</div>

</body>


</html>
